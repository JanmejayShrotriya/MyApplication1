<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Writeoff_inventory">

    <TextView
        android:id="@+id/TVdelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Write Off Request"
        android:textColor="#000"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/TVdelete">
    <LinearLayout
        android:id="@+id/LLformdelete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="57dp"
        android:padding="20dp"
        android:layout_below="@+id/TVdelete">

        <EditText
            android:id="@+id/writeoff_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Item id"
            android:inputType="textPersonName"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Item Name"
            android:inputType="textAutoComplete"
            tools:ignore="InvalidId,MissingConstraints" />

        <EditText
            android:id="@+id/writeoff_qty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Quntity"
            android:inputType="number"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/price_each"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Price Of Each Item"
            android:inputType="number"
            tools:ignore="MissingConstraints" />
        <EditText
            android:id="@+id/date_purchase"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Purchase"
            android:inputType="date"
            tools:ignore="InvalidId,MissingConstraints" />

        <EditText
            android:id="@+id/date_unuse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Date of Unusablity"
            android:inputType="date"
            tools:ignore="InvalidId,MissingConstraints" />

        <EditText
            android:id="@+id/period_use"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Period Of Use"
            android:inputType="textAutoComplete"
            tools:ignore="InvalidId,MissingConstraints" />

        <EditText
            android:id="@+id/period_unuse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Period Of Item Become Unserviceable"
            android:inputType="textAutoComplete"
            tools:ignore="InvalidId,MissingConstraints" />

        <EditText
            android:id="@+id/defect_repair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Whether Defect Can Be Repaired"
            android:inputType="textAutoComplete"
            tools:ignore="InvalidId,MissingConstraints" />

        <EditText
            android:id="@+id/total_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Total Amount Of Items "
            android:inputType="number"
            tools:ignore="MissingConstraints" />

        <EditText
            android:id="@+id/defect_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description Defects Devlop In Condition Of Item"
            android:inputType="textAutoComplete"
            tools:ignore="InvalidId,MissingConstraints" />


        <EditText
            android:id="@+id/reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Reason"
            android:inputType="textAutoComplete"
            tools:ignore="InvalidId,MissingConstraints" />
        <Button
            android:id="@+id/writeoff_inventory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write-off Request"
            android:background="#020ef1"
            android:textSize="20dp"
            android:padding="20dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/LLformdelete"
            android:layout_gravity="center"
            />
    </LinearLayout>

  </ScrollView>

</RelativeLayout>